{
  "name": "eamon-remastered",
  "description": "A rewrite of the classic text adventure game, The Wonderful World of Eamon.",
  "license": "ISC",
  "version": "2.0.0",
  "dependencies": {
    "axios": "^0.18.0",
    "ie-array-find-polyfill": "^1.1.0",
    "js-cookie": "^2.2.0",
    "lz-string": "^1.4.4",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "react-facebook-login": "^4.1.1",
    "react-router-dom": "^4.3.1",
    "react-transition-group": "^2.5.0",
    "reactstrap": "^6.5.0",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "concurrently \"yarn run webpack:watch\" \"yarn run build-css:watch\"",
    "build": "yarn run webpack && yarn run build-css",
    "build-css": "node-sass scss -o build/static/css",
    "build-css:watch": "node-sass -w scss -o build/static/css",
    "test": "jest",
    "webpack": "webpack --mode production",
    "webpack:dev": "webpack --mode development",
    "webpack:watch": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.5",
    "@types/react": "^16.7.2",
    "@types/react-dom": "^16.0.9",
    "@types/react-router-dom": "^4.3.1",
    "babel-core": "6.26.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "7",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^4.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "node-sass": "^4.10.0",
    "react-test-renderer": "^16.6.3",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/adventures/base-adventure/"
    ],
    "testURL": "http://localhost:8000/"
  }
}
