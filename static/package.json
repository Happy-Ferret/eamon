{
  "name": "eamon",
  "description": "A rewrite of the classic text adventure game, The Wonderful World of Eamon.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kdechant/eamon.git"
  },
  "scripts": {
    "start": "concurrently \"npm run build-css:watch\" \"npm run browser-sync\"",
    "start-all": "tsc && concurrently \"npm run build:watch\" \"npm run build-css:watch\" \"npm run browser-sync\" ",
    "browser-sync": "browser-sync start --files \"static/css/*.css\" --proxy 127.0.0.1:8000 --serveStatic: static",
    "build:watch": "tsc -w",
    "build:upgrade": "tsc",
    "build-css:watch": "node-sass -w scss -o css",
    "build-css:upgrade": "node-sass scss -o css",
    "serve:upgrade": "http-server",
    "lint": "tslint app/**/*.ts"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "~5.2.0",
    "@angular/common": "~5.2.0",
    "@angular/compiler": "~5.2.0",
    "@angular/core": "~5.2.0",
    "@angular/forms": "~5.2.0",
    "@angular/http": "~5.2.0",
    "@angular/platform-browser": "~5.2.0",
    "@angular/platform-browser-dynamic": "~5.2.0",
    "@angular/platform-server": "~5.2.0",
    "@angular/router": "~5.2.0",
    "@angular/upgrade": "~5.2.0",
    "@ng-bootstrap/ng-bootstrap": "~1.0.0",
    "angular2-notifications": "^0.9.6",
    "angular5-social-login": "^1.0.9",
    "bootstrap": "4.0.0",
    "core-js": "^2.5.1",
    "lz-string": "^1.4.4",
    "ngx-cookie": "^2.0.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.6",
    "systemjs": "^0.21.0",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "^1.7.2",
    "@angular/compiler-cli": "^5.2.0",
    "@types/angular": "^1.6.43",
    "@types/angular-animate": "^1.5.9",
    "@types/angular-cookies": "^1.4.5",
    "@types/angular-mocks": "^1.5.11",
    "@types/angular-resource": "^1.5.14",
    "@types/angular-route": "^1.3.2",
    "@types/angular-sanitize": "^1.3.6",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^9.4.6",
    "canonical-path": "0.0.2",
    "concurrently": "^3.5.0",
    "http-server": "^0.11.0",
    "jasmine": "~2.4.1",
    "jasmine-core": "~2.4.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lite-server": "^2.3.0",
    "node-sass": "^4.7.2",
    "protractor": "~5.2.0",
