{
  "name": "eamon",
  "description": "A rewrite of the classic text adventure game, The Wonderful World of Eamon.",
  "version": "1.2.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/kdechant/eamon.git"
  },
  "scripts": {
    "start": "concurrently \"npm run build-css:watch\" \"npm run browser-sync\"",
    "start-all": "tsc && concurrently \"npm run build:watch\" \"npm run build-css:watch\" \"npm run browser-sync\" ",
    "browser-sync": "browser-sync start --files \"static/css/*.css\" --proxy 127.0.0.1:8000 --serveStatic: static",
    "build": "ng build core && ng build main-hall",
    "build:watch": "concurrently \"ng build core --watch\" \"ng build main-hall --watch\" \"npm run webpack:watch\" ",
    "build-css:watch": "node-sass -w scss -o css",
    "build-css:upgrade": "node-sass scss -o css",
    "webpack": "cd adventures && webpack --config webpack.config.js --mode development",
    "webpack:watch": "cd adventures && webpack --config webpack.config.js --mode development --watch",
    "serve:upgrade": "http-server",
    "lint": "tslint app/**/*.ts"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "@ng-bootstrap/ng-bootstrap": "^3.3.0",
    "angular-6-social-login": "^1.1.1",
    "bootstrap": "4.0.0",
    "core-js": "^2.5.4",
    "lz-string": "^1.4.4",
    "ngx-cookie-service": "^1.0.10",
    "reflect-metadata": "^0.1.10",
    "rxjs": "~6.2.0",
    "rxjs-compat": "^6.2.2",
    "web-animations-js": "^2.3.1",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular/cli": "^7.0.0-rc.3",
    "@angular/compiler-cli": "^6.1.0",
    "@types/angular": "^1.6.51",
    "@types/angular-animate": "^1.5.10",
    "@types/angular-cookies": "^1.4.5",
    "@types/angular-mocks": "^1.7.0",
    "@types/angular-resource": "^1.5.14",
    "@types/angular-route": "^1.7.0",
    "@types/angular-sanitize": "^1.3.6",
    "@types/jasmine": "^2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "canonical-path": "0.0.2",
    "concurrently": "^4.0.1",
    "http-server": "^0.11.0",
    "jasmine": "^3.2.0",
    "jasmine-core": "~2.4.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lite-server": "^2.4.0",
    "node-sass": "^4.9.3",
    "protractor": "^5.4.1",
    "rimraf": "^2.6.2",
    "ts-loader": "^5.2.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "^2.9.2",
    "webdriver-manager": "^12.0.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  }
}
