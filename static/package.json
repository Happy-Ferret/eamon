{
  "name": "eamon",
  "description": "A rewrite of the classic text adventure game, The Wonderful World of Eamon.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kdechant/eamon.git"
  },
  "scripts": {
    "start": "concurrently \"npm run build:watch\" \"npm run browser-sync\"",
    "start-all": "tsc && concurrently \"npm run build:watch\" \"npm run build-css:watch\" \"npm run browser-sync\" ",
    "browser-sync": "browser-sync start --files \"static/css/*.css\" --proxy 127.0.0.1:8000 --serveStatic: static",
    "build:watch": "tsc -w",
    "build:upgrade": "tsc",
    "build-css:watch": "node-sass -w scss -o css",
    "build-css:upgrade": "node-sass scss -o css",
    "serve:upgrade": "http-server",
    "lint": "tslint app/**/*.ts"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "~4.3.1",
    "@angular/common": "~4.3.1",
    "@angular/compiler": "~4.3.1",
    "@angular/compiler-cli": "~4.3.1",
    "@angular/core": "~4.3.1",
    "@angular/forms": "~4.3.1",
    "@angular/http": "~4.3.1",
    "@angular/platform-browser": "~4.3.1",
    "@angular/platform-browser-dynamic": "~4.3.1",
    "@angular/router": "~4.3.1",
    "@angular/upgrade": "~4.3.1",
    "angular2-notifications": "^0.7.7",
    "angular2-uuid": "^1.1.0",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "ngx-cookie": "^1.0.0",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.1.0",
    "systemjs": "0.19.39",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@types/angular": "^1.5.16",
    "@types/angular-animate": "^1.5.5",
    "@types/angular-cookies": "^1.4.2",
    "@types/angular-mocks": "^1.5.5",
    "@types/angular-resource": "^1.5.6",
    "@types/angular-route": "^1.3.2",
    "@types/angular-sanitize": "^1.3.3",
    "@types/jasmine": "2.5.36",
    "@types/node": "^6.0.45",
    "canonical-path": "0.0.2",
    "concurrently": "^3.1.0",
    "http-server": "^0.9.0",
    "jasmine": "~2.4.1",
    "jasmine-core": "~2.4.1",
    "karma": "^1.4.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lite-server": "^2.2.2",
    "lodash": "^4.16.4",
    "node-sass": "^4.5.2",
    "protractor": "~5.1.0",
    "rimraf": "^2.5.4",
    "tslint": "^5.1.0",
    "typescript": "^2.3.2",
    "webdriver-manager": "10.2.5"
  }
}
